app = "{{.ProjectName}}"
primary_region = "iad"

[build]

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]
{{- if .HasGRPC}}

[http_service.http_options]
  h2_backend = true  # Enable HTTP/2 for gRPC
{{- end}}

[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 256

[env]
  PORT = "8080"
  STAGE = "production"
{{- if .HasDynamoDB}}
  AWS_REGION = "us-east-1"
  TABLE_NAME = "{{.ProjectName}}"
  # Note: AWS credentials (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY) must be set as secrets
  # Run: fly secrets set AWS_ACCESS_KEY_ID=your-key AWS_SECRET_ACCESS_KEY=your-secret
{{- end}}
  # Note: gRPC reflection is automatically disabled in non-local stages

[metrics]
  port = 8080  # Use same port as main service
  path = "/metrics"

