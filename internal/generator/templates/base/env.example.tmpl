# Environment Variables for {{.ProjectName}}
# Copy this file to .env and fill in your secrets
# Note: All non-sensitive configuration is in YAML files (local.yaml, development.yaml, production.yaml)
# Only secrets are loaded from environment variables

# Stage selection (determines which YAML file to load)
STAGE=local  # Options: local, development, production

# Secrets (REQUIRED)
{{- if .HasPostgres}}
# PostgreSQL connection string (required)
# For local development: postgres://postgres:postgres@localhost:5432/{{.ProjectName}}?sslmode=disable
# For Supabase local: postgres://postgres:postgres@localhost:54322/postgres
# For production: Set via environment variables (Supabase, AWS RDS, etc.)
# Run migrations with: make migrate-up
DATABASE_URL=postgres://postgres:postgres@localhost:5432/{{.ProjectName}}?sslmode=disable
{{- end}}

{{- if .HasAuth}}
# JWT Secret (required for decoding JWTs from Supabase Auth or Clerk)
# Get your JWT secret from your auth provider settings
{{- if .JWTSecret}}
JWT_SECRET={{.JWTSecret}}
{{- else}}
JWT_SECRET=your-jwt-secret-from-supabase-or-clerk
{{- end}}
{{- end}}

{{- if .HasPostHog}}
# PostHog API Key (optional - PostHog will be disabled if not provided)
# Get your API key from: https://app.posthog.com/project/settings
{{- if .PostHogAPIKey}}
POSTHOG_API_KEY={{.PostHogAPIKey}}
{{- else}}
POSTHOG_API_KEY=your-posthog-api-key
{{- end}}
{{- end}}

