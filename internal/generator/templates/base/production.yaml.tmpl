# {{.ProjectName}} - Production Configuration
# This file is gitignored and should be generated by the CLI
# Secrets should be set via environment variables

server:
  port: "8080"
  stage: "production"

database:
{{- if .HasDynamoDB}}
  aws_region: "us-east-1"
  table_name: "{{.ProjectName}}"
  endpoint_url: ""  # Uses default AWS SDK configuration (IAM roles when running on AWS infrastructure)
{{- end}}
{{- if .HasPostgres}}
  url: ""  # Set via DATABASE_URL environment variable
{{- end}}

{{- if .HasAuth}}
auth:
  token_expiry: "24h"
{{- end}}

{{- if .HasMetrics}}
metrics:
  enabled: true
  path: "/metrics"
{{- end}}

{{- if .HasPostHog}}
posthog:
  enabled: true
{{- if .PostHogHost}}
  host: "{{.PostHogHost}}"
{{- else}}
  host: "https://app.posthog.com"
{{- end}}
{{- end}}

