# {{.ProjectName}} Configuration
# This file contains non-sensitive configuration
# Secrets should be set via environment variables

server:
  port: "8080"
  stage: "local"  # Options: local, development, production
  # Note: gRPC reflection is automatically enabled in local stage

database:
  aws_region: "us-east-1"
  table_name: "{{.ProjectName}}"
  endpoint_url: "http://localhost:8000"  # For local DynamoDB

{{- if .HasAuth}}
auth:
  token_expiry: "24h"
{{- end}}

{{- if .HasMetrics}}
metrics:
  enabled: true
  path: "/metrics"
{{- end}}

