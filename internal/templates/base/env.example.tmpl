# Environment Variables for {{.ProjectName}}
# Copy this file to .env and fill in your secrets

# Server Configuration
PORT=8080
ENV=local
ENABLE_REFLECTION=true

# Database Configuration
{{- if .HasDynamoDB}}
AWS_REGION=us-east-1
TABLE_NAME={{.ProjectName}}
DYNAMODB_ENDPOINT=http://localhost:8000
{{- else if .HasPostgres}}
DB_HOST=localhost
DB_PORT=5432
DB_NAME={{.ProjectName}}
DB_SSL_MODE=disable

# Database Secrets (REQUIRED)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/{{.ProjectName}}?sslmode=disable
{{- end}}

{{- if .HasAuth}}
# Auth Secrets (REQUIRED)
JWT_SECRET=your-secret-key-change-this-in-production
TOKEN_EXPIRY=24h
{{- end}}

{{- if .HasMetrics}}
# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics
{{- end}}

