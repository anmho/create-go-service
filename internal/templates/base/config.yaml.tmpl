# {{.ProjectName}} Configuration
# This file contains non-sensitive configuration
# Secrets should be set via environment variables

server:
  port: "8080"
  environment: "local"
  enable_reflection: true

database:
{{- if .HasDynamoDB}}
  aws_region: "us-east-1"
  table_name: "{{.ProjectName}}"
  endpoint_url: "http://localhost:8000"  # For local DynamoDB
{{- else if .HasPostgres}}
  host: "localhost"
  port: 5432
  database: "{{.ProjectName}}"
  ssl_mode: "disable"
{{- end}}

{{- if .HasAuth}}
auth:
  token_expiry: "24h"
{{- end}}

{{- if .HasMetrics}}
metrics:
  enabled: true
  path: "/metrics"
{{- end}}

